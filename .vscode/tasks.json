{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Build with GCC",
            "command": "/usr/bin/g++-10",
            "args": [
                    "-g",
                    "-std=c++20",
                    "-Wall",
                    "-Weffc++",
                    "-Wextra",
                    "Wsign-conversion",
                    "${workspaceFolder}/variables_and_datatypes/*.cpp",
                    "${workspaceFolder}/Numbers/*.cpp",
                    "${workspaceFolder}/LeetCode/Easy/*.cpp",
                    "-o",
                    "${workspaceFolder}/build/greatClub"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: /usr/bin/g++-10"
        }
    ]
}